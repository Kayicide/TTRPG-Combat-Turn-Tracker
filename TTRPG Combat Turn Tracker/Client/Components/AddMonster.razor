<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">

    @if (IsOpen)
    {
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 sm:w-full md:w-full lg:w-4/6 xl:w-3/5 2xl:w-5/12">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-5 border-b rounded-t dark:border-gray-600">
                        <h3 class="text-3xl font-bold text-gray-900 dark:text-white">
                            Add Enemy
                        </h3>
                        <button type="button" @onclick="Close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="medium-modal">
                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                            <span class="sr-only">Close modal</span>
                        </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-6 space-y-6 flex flex-col">
                        <div class="flex flex-row">
                            <div class="flex flex-col justify-items-start grow">
                                <div class="flex justify-items-start">
                                    <h1 class="block mb-1 pl-2 text-lg font-medium text-white">Name</h1>
                                </div>
                                <input id="name" @bind="_name" class="border border-gray-400 bg-gray-700 text-white text-xl rounded-lg block w-full p-3">
                            </div>
                            <div class="flex flex-row justify-items-end">
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Initiative</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_initiative" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">AC</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_armourClass" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Health</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_health" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                            </div>
                        </div>
                        <hr class="w-full h-1 mx-auto my-4 border-0 rounded bg-gray-600">
                        <div class="flex flex-col">
                            <div class="flex flex-row pr-3 justify-evenly flex-wrap">
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Strength</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_strength" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Dexterity</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_dexterity" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Constitution</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_constitution" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Intelligence</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_intelligence" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Wisdom</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_wisdom" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                                <div class="flex flex-col justify-items-start w-20 pl-3">
                                    <div class="flex justify-center">
                                        <h1 class="block mb-1 text-lg font-medium text-white">Charisma</h1>
                                    </div>
                                    <input id="initiative" type="number" @bind="_charisma" class="border border-gray-400 bg-gray-700 text-white text-xl text-center rounded-lg block w-full p-3">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="flex flex-row-reverse items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                        <button type="submit" @onclick="Add" class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-lg w-full sm:w-auto px-5 py-2.5 text-center ">Add</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>